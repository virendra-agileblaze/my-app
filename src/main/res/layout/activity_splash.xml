                    android:background="@drawable/four" />

                <ImageView
                    android:id="@+id/eight"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="240dp"
                    android:background="@drawable/eight" />

                <ImageView
                    android:id="@+id/nine"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/nine" />

                <ImageView
                    android:id="@+id/fifteen"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal|left|center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/fifteen" />

                <ImageView
                    android:id="@+id/fourteen"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal|left|center"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/fourteen" />

                <ImageView
                    android:id="@+id/eleven"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="75dp"
