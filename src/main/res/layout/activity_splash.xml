<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/sixteen"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal|left|center"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/sixteen" />

                <ImageView
                    android:id="@+id/seven"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="105dp"
                    android:layout_marginTop="185dp"
                    android:background="@drawable/seven" />

                <ImageView
                    android:id="@+id/zero"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/zero" />

                <ImageView
                    android:id="@+id/one"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="190dp"
                    android:background="@drawable/one" />

                <ImageView
                    android:id="@+id/six"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="160dp"
                    android:background="@drawable/six" />

                <ImageView
                    android:id="@+id/three"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top|center"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="155dp"
                    android:background="@drawable/three" />

                <ImageView
                    android:id="@+id/two"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="220dp"
                    android:background="@drawable/two" />

                <ImageView
                    android:id="@+id/five"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top|right"
