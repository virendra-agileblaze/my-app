<resources>
    <style name="EditText"/>
    <style name="EditText.SignInSignUp">

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextInputLayout"/>
    <style name="TextInputLayout.SignInSignUp">
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="MySpinnerDropDownStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/colorGray</item>
        <item name="android:dividerHeight">1px</item>
    </style>
    <style name="MySpinnerItemStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:paddingLeft">0dp</item>
    </style>
</resources>
